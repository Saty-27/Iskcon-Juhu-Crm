# ISKCON Juhu Donation System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://iskcon_user:your_secure_password@localhost:5432/iskcon_juhu
PGHOST=localhost
PGPORT=5432
PGUSER=iskcon_user
PGPASSWORD=your_secure_password
PGDATABASE=iskcon_juhu

# PayU Payment Gateway - LIVE PRODUCTION
PAYU_MERCHANT_KEY=your_live_merchant_key_from_payu
PAYU_MERCHANT_SALT=your_live_merchant_salt_from_payu

# Email Configuration for PDF Receipts
EMAIL_USER=donations@iskconjuhu.org
EMAIL_PASSWORD=your_gmail_app_specific_password

# Twilio WhatsApp Business API
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_whatsapp_business_number

# Session Security
SESSION_SECRET=generate_a_very_long_random_string_here_minimum_32_characters

# Application Settings
NODE_ENV=production
PORT=5000